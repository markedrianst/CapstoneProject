<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35616E"
    android:fitsSystemWindows="true"
    tools:context=".about">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangleContainer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_header"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="About"
            android:textColor="#35616E"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/back"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Course Overview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSE OVERVIEW:"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FAFAFA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>


            <!-- Developer Credits Section -->
            <!-- WebView for justified text -->
            <WebView
                android:id="@+id/courseOverviewWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginBottom="24dp"
                tools:ignore="WebViewLayout" />

            <!-- Developer Credits Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEVELOPER CREDITS:"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FAFAFA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- WebView for justified text -->
            <WebView
                android:id="@+id/developerCreditsWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                tools:ignore="WebViewLayout" />
            <!-- Optional: Add team member cards here if needed -->

            <!-- Organizational Chart -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developement Team"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FAFAFA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Row 1: Programmer & Co-Programmer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <!-- Programmer -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="12dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/programmerImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_programmer"/>

                                <ImageButton
                                    android:id="@+id/programmerFacebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mark Edrian Talavera"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Programmer"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <!-- Co-Programmer -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="12dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/coProgrammerImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_coprogrammer"/>

                                <ImageButton
                                    android:id="@+id/coProgrammerFacebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lanz Justine Mallari"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Co Programmer"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2: Project Manager & Member 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <!-- Project Manager -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="12dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/projectManagerImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_project_manager"/>

                                <ImageButton
                                    android:id="@+id/projectManagerFacebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dandy John De Guzman"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Project Manager"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <!-- Member 1 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="12dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/member1Image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_member1" />

                                <ImageButton
                                    android:id="@+id/member1Facebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Vincent Pantig"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Member"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 3: Member 2 & Member 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <!-- Member 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="16dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/member2Image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_member2" />

                                <ImageButton
                                    android:id="@+id/member2Facebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Rhendell Ong"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Member"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <!-- Member 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="16dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/member3Image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_member4" />

                                <ImageButton
                                    android:id="@+id/member3Facebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edmar Perez"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Member"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 4: Member 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <!-- Member 4 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="12dp">

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/member4Image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_member3" />

                                <ImageButton
                                    android:id="@+id/member4Facebook"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_facebook"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ryan Christian Capili"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Member"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>