<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/splash_background">

    <!-- Splash Image anchored at the bottom -->
    <ImageView
        android:id="@+id/splashppl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginBottom="15dp"
        android:src="@drawable/splashppl"
        android:contentDescription="Splash People"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content container anchored above the splash image -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/splashppl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="2dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="App Logo"
            android:src="@drawable/splash_icon" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORIENT 1"
            android:textColor="#F7C12B"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/appNamep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLICATION"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"/>

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="in partnership with Dominican College of Tarlac, Inc."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
