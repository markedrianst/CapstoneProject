<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_transparent"
    android:padding="24dp">

    <!-- Header / Icon -->
    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_search"
        android:tint="@android:color/white"
        android:layout_gravity="center"
        android:contentDescription="Dialog Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Navigation Tip"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <!-- First line -->
    <TextView
        android:id="@+id/dialog_message_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use search to navigate the specific location."
        android:textSize="16sp"
        android:lineSpacingExtra="2dp"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- Second line -->
    <TextView
        android:id="@+id/dialog_message_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tap the screen to dismiss"
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="#DDDDDD"
        android:layout_marginTop="16dp" />

</LinearLayout>
